    <h1>Orçamento - 033Rooftop</h1>
    <p>
        <b>Tipo do Evento:</b> <%= @budget.customer_kind == "F" ? "Social" : "Corporativo" %>
    </p>
    <p>
        <b>Nome:</b> <%= @budget.name %>
    </p>
    <p>
        <b>E-mail:</b> <%= @budget.email %>
    </p>
    <p>
        <b>Telefone:</b> <%= @budget.phone %>
    </p>
